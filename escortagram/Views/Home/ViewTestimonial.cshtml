@model IEnumerable<escortagram.Models.Testimonial>       



@{
    ViewBag.Title = "ViewTestimonial";
   
}



<h2>ViewTestimonial</h2>


<table id="example2" class="table table-bordered table-hover dataTable" role="grid" aria-describedby="example2_info">
    <thead>
        <tr role="row">
            <th class="sorting_asc" tabindex="0" aria-controls="example2" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Rendering engine: activate to sort column descending">TestimonialTitle</th>
            <th class="sorting" tabindex="0" aria-controls="example2" rowspan="1" colspan="1" aria-label="Browser: activate to sort column ascending">TestimonialDesc</th>
            <th class="sorting" tabindex="0" aria-controls="example2" rowspan="1" colspan="1" aria-label="Browser: activate to sort column ascending">Image</th>
            <th class="sorting" tabindex="0" aria-controls="example2" rowspan="1" colspan="1" aria-label="Browser: activate to sort column ascending">Active</th>
            <th class="sorting" tabindex="0" aria-controls="example2" rowspan="1" colspan="1" aria-label="CSS grade: activate to sort column ascending">Delete</th>
            <th class="sorting" tabindex="0" aria-controls="example2" rowspan="1" colspan="1" aria-label="CSS grade: activate to sort column ascending">Edit</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
            <tr role="row" class="odd" id="Findtesti_@item.TestimonialID">
                <td class="sorting_1">@item.TestimonialTitle</td>
                <td>@item.TestimonialDesc</td>
               <td>
                  @{
            var image = "/Upload/TestimonialImages/" + item.TestimonialImage + ".jpg";
                  }
                   <img src="@image" style="height:50px;width:50px;" alt="Photo" />
               </td>
                <td>
                    @if (item.Active==true)
                    { 
                    <input type="checkbox" id="Testimonialstatus_@item.TestimonialID" checked class="checked" />
                    }
                    else if (item.Active == false)
                    {
                        <input type="checkbox" id="Testimonialstatus_@item.TestimonialID" class="checked" />
                    }
                </td>
                <td>
                    <a href="javascript:" id="DeleteTesti_@item.TestimonialID" onclick="DeleteDestimonial(@item.TestimonialID);">Delete</a>
                    
                </td>
                <td>
                    <a href="javascript:" id="UpdateTesti_@item.TestimonialID" onclick="EditTestimonial(@item.TestimonialID);">Edit</a>
                    <div id="hidediv_@item.TestimonialID" style="display:none">
                        <a href="javascript:" id="Cancellink_@item.TestimonialID" onclick="UpdateTestimonial(@item.TestimonialID);">Update</a>
                        <a href="javascript:" id="UpdateLink_@item.TestimonialID" onclick="CancelLinkTesti(@item.TestimonialID);">Cancel</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>

</table>