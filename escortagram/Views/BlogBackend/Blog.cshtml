
@{
    ViewBag.Title = "Blog";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<form action="/Home/Testimonials/" method="post" id="BlogUpload">
   
        <div class="form-group">
            <label class="col-sm-3 control-label" for="LastName">Title</label>
            <div class="col-sm-10">

                <input type="text" id="testmonialtext" name="Title" class="form-group" required />
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-3 control-label" for="Description">Description</label>
            <div class="col-sm-10">

                <input type="text" id="testmonialDesc" name="Desc" class="form-group" required />
            </div>
        </div>
    <div class="form-group">
        <label class="col-sm-3 control-label" for="Enable">Enable</label>
        <div class="col-sm-10">

            <input type="checkbox" name="Enable" class="checked" required/>
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-3 control-label" for="Comments">Enable Comments</label>
        <div class="col-sm-10">

            <input type="checkbox" name="CommentEnable" class="checked" required/>
        </div>
    </div>
        <div class="form-group">
            <label class="col-sm-3 control-label" for="Image">Image</label>
            <div class="col-sm-10">
                <input type="file" name="file" required />
            </div>
        </div>
        <br /><br />
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">

                <button type="submit" class="btn btn-primary">Add Blog</button>
                <a href="@Url.Action("ViewBlog", "BlogBackend")" class="btn btn-primary">View</a>

            </div>
           
        </div>
        
    
</form>
